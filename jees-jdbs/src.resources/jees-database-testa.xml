           <!-- 映射类存放路径 -->                <value>com.jees.test.entity</value>            </list>        </property>        <!-- Hibernate配置文件，见jees-core-database.xml -->        <property name="hibernateProperties" ref="hibernateProperties"/>    </bean>    <!-- 据说是优化的atomikos性能的方法 -->    <bean id="dataSourceProxyA" class="org.springframework.jdbc.datasource.TransactionAwareDataSourceProxy">        <constructor-arg ref="testDSA"></constructor-arg>    </bean></beans>