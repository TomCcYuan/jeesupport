	<modelVersion>4.0.0</modelVersion>

	<!--  Maven Central  -->
	<groupId>com.github.aiyoyoyo</groupId>
	<artifactId>jees-jdbs</artifactId>
	<version>1.1.0-SNAPSHOT</version>
	<name>Java Database Support</name>

	<description>Spring Atomikos database supprot</description>
	<url>${jees.url}</url>

	<!-- Project Information -->
	<properties>
		<main.basedir>${basedir}/..</main.basedir>
		<jees.artifactId>jees-jdbs</jees.artifactId>
	</properties>

	<parent>
		<groupId>com.github.aiyoyoyo</groupId>
		<artifactId>jees-boot</artifactId>
		<version>0.1-SNAPSHOT</version>
		<relativePath>../jees-boot/pom.xml</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring.boot.version}</version>
				<configuration>
					<includes>
						<include>
							<groupId>${jees.groupId}</groupId>
							<artifactId>${jees.artifactId}</artifactId>
						</include>
					</includes>
					<fork>true</fork>
					<classifier>exec</classifier>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
